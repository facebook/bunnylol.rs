#!/bin/bash
# Pre-commit hook for bunnylol.rs
# Runs formatting, tests, and checks before allowing commit

set -e

echo "Running pre-commit checks..."
echo ""

# Format code automatically (moved to first for best UX)
echo "ğŸ¨ Formatting code..."
cargo fmt --all

# Re-add any Rust files that were formatted to ensure changes are committed
STAGED_RS_FILES=$(git diff --name-only --cached | grep '\.rs$' || true)
if [ -n "$STAGED_RS_FILES" ]; then
    echo "$STAGED_RS_FILES" | xargs git add
    echo "âœ… Code formatted and re-staged"
else
    echo "âœ… No Rust files to format"
fi

# Run cargo check (fast compilation check)
echo ""
echo "ğŸ” Running cargo check..."
cargo check --all-features

# Run clippy (linter)
echo ""
echo "ğŸ”§ Running cargo clippy..."
cargo clippy --all-features -- -D warnings

# Run tests
echo ""
echo "ğŸ§ª Running cargo test..."
cargo test --all-features

echo ""
echo "âœ… All checks passed! Proceeding with commit."
